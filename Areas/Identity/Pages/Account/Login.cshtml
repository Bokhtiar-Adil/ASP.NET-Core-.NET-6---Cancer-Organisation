@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/myLogin.css" asp-append-version="true" />


<section class="login-form-container">
    <div style="width: 50%;"></div>
    <div class="container-fluid" style="display: flex; justify-content: center; align-items: center; min-width: 50%;">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>log in</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating" style="margin: 1rem;">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating" style="margin: 1rem;">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox" style="margin: 1rem; color: #fff;">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div style="display: flex; justify-content: center; align-items: center;">
                    <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
