@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/myLogin.css" asp-append-version="true" />

<section class="login-form-container">
    <div style="width: 50%;"></div>

    <div style="height: 100px;"></div>
    <div class="container-fluid" style="display: flex; justify-content: center; align-items: center; min-width: 50%;">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="margin: 1rem;">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 1rem;">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin: 1rem;">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div style="display: flex; justify-content: center; align-items: center;">
                    <button id="registerSubmit" type="submit" class="w-50 btn btn-lg btn-primary">Register</button>
                </div>
            
        </form>
    </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
