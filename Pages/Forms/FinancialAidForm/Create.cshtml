@page
@model NonProfitSiteV3.Pages.Forms.FinancialAidForm.CreateModel

@{
    ViewData["Title"] = "Financial Aid Request Form";
}

<div style="height: 100px;"></div>
<h1 style="text-align: center; color: red;">Financial Aid Request Form</h1>

<hr />
<div class="container-fluid p-3" style="display: flex; align-items: center; justify-content: center;">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="FinancialAid.AID_name" class="control-label"></label>
                <input asp-for="FinancialAid.AID_name" class="form-control" />
                <span asp-validation-for="FinancialAid.AID_name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FinancialAid.AID_father" class="control-label"></label>
                <input asp-for="FinancialAid.AID_father" class="form-control" />
                <span asp-validation-for="FinancialAid.AID_father" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FinancialAid.AID_contact" class="control-label"></label>
                <input asp-for="FinancialAid.AID_contact" class="form-control" />
                <span asp-validation-for="FinancialAid.AID_contact" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FinancialAid.AID_email" class="control-label"></label>
                <input asp-for="FinancialAid.AID_email" class="form-control" type="email" />
                <span asp-validation-for="FinancialAid.AID_email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FinancialAid.AID_address" class="control-label"></label>
                <textarea asp-for="FinancialAid.AID_address" class="form-control"></textarea>
                <span asp-validation-for="FinancialAid.AID_address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FinancialAid.AID_occupation" class="control-label"></label>
                <input asp-for="FinancialAid.AID_occupation" class="form-control" />
                <span asp-validation-for="FinancialAid.AID_occupation" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FinancialAid.AID_reason" class="control-label"></label>
                <textarea asp-for="FinancialAid.AID_reason" class="form-control"></textarea>
                <span asp-validation-for="FinancialAid.AID_reason" class="text-danger"></span>
            </div>
            <div class="mb-3" style="display: flex; align-items: center; justify-content: center;">
                <button type="submit" value="Create" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
