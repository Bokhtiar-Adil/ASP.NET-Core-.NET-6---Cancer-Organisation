@page
@model NonProfitSiteV3.Pages.Forms.BloodDonerForm.CreateModel

@{
    ViewData["Title"] = "Blood Donation Request Form";
}

<div style="height: 100px;"></div>
<h1 style="text-align: center; color: red;">Blood Donation Request Form</h1>

<hr />
<div class="container-fluid p-3" style="display: flex; align-items: center; justify-content: center;">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="BloodDoner.BB_name" class="control-label"></label>
                <input asp-for="BloodDoner.BB_name" class="form-control" />
                <span asp-validation-for="BloodDoner.BB_name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BloodDoner.BB_father" class="control-label"></label>
                <input asp-for="BloodDoner.BB_father" class="form-control" />
                <span asp-validation-for="BloodDoner.BB_father" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BloodDoner.BB_contact" class="control-label"></label>
                <input asp-for="BloodDoner.BB_contact" class="form-control" />
                <span asp-validation-for="BloodDoner.BB_contact" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BloodDoner.BB_email" class="control-label"></label>
                <input asp-for="BloodDoner.BB_email" class="form-control" type="email" />
                <span asp-validation-for="BloodDoner.BB_email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BloodDoner.BB_address" class="control-label"></label>
                <textarea asp-for="BloodDoner.BB_address" class="form-control"></textarea>
                <span asp-validation-for="BloodDoner.BB_address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BloodDoner.BB_occupation" class="control-label"></label>
                <input asp-for="BloodDoner.BB_occupation" class="form-control" />
                <span asp-validation-for="BloodDoner.BB_occupation" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BloodDoner.BB_blodtype" class="control-label"></label>
                <input asp-for="BloodDoner.BB_blodtype" class="form-control" />
                <span asp-validation-for="BloodDoner.BB_blodtype" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BloodDoner.BB_quantity" class="control-label"></label>
                <input asp-for="BloodDoner.BB_quantity" class="form-control" type="number" />
                <span asp-validation-for="BloodDoner.BB_quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BloodDoner.BB_deadline" class="control-label"></label>
                <input asp-for="BloodDoner.BB_deadline" class="form-control" type="number" />
                <span asp-validation-for="BloodDoner.BB_deadline" class="text-danger"></span>
            </div>
            <div class="mb-3" style="display: flex; justify-content: center; align-items: center;">
                <button type="submit" value="Create" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
