@page
@model NonProfitSiteV3.Pages.Forms.BloodDonerForm.IndexModel

@{
    ViewData["Title"] = "Blood Request List";
}


<link rel="stylesheet" href="~/css/CyborgTheme.css" asp-append-version="true" />

<div style="height: 100px;"></div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <img src="~/Images/Icons/square-plus-solid.svg" style="width: 15px; height: 15px;" /> &nbsp;Add New Entry
            </a>
        </div>
    </div>

    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                @Html.DisplayNameFor(model => model.BloodDoner[0].BB_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodDoner[0].BB_father)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodDoner[0].BB_contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodDoner[0].BB_email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodDoner[0].BB_address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodDoner[0].BB_occupation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodDoner[0].BB_blodtype)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodDoner[0].BB_quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodDoner[0].BB_deadline)
            </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BloodDoner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BB_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BB_father)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BB_contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BB_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BB_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BB_occupation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BB_blodtype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BB_quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BB_deadline)
            </td>
            <td style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap; row-gap: 1rem;">
                <a asp-page="./Edit" asp-route-id="@item.BB_Id" class="btn btn-primary mx-2">
                    <img src="~/Images/Icons/pen-to-square-solid.svg" style="width: 15px; height: 15px;" />    
                </a>|
                <a asp-page="./Details" asp-route-id="@item.BB_Id" class="btn btn-success mx-2">
                    <img src="~/Images/Icons/circle-info-solid.svg" style="width: 15px; height: 15px;" />       
                </a> |
                <a asp-page="./Delete" asp-route-id="@item.BB_Id" class="btn btn-danger mx-2">
                    <img src="~/Images/Icons/trash-solid.svg" style="width: 15px; height: 15px;" />
                </a>
            </td>
        </tr>
}
        </tbody>
    </table>
</div>