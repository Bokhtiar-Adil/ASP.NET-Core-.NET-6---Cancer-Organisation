@page
@model NonProfitSiteV3.Pages.Forms.DonationForm.IndexModel

@{
    ViewData["Title"] = "Donation List";
}


<link rel="stylesheet" href="~/css/CyborgTheme.css" asp-append-version="true" />

<div style="height: 100px;"></div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <img src="~/Images/Icons/square-plus-solid.svg" style="width: 15px; height: 15px;" /> &nbsp;Add New Entry
            </a>
        </div>
    </div>

    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                @Html.DisplayNameFor(model => model.Donation[0].Don_contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Don_email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Don_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donation[0].Don_details)
            </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Donation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Don_contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Don_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Don_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Don_details)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Don_ID" class="btn btn-primary mx-2">
                    <img src="~/Images/Icons/pen-to-square-solid.svg" style="width: 15px; height: 15px;" />    
                </a>|
                <a asp-page="./Details" asp-route-id="@item.Don_ID" class="btn btn-success mx-2">
                    <img src="~/Images/Icons/circle-info-solid.svg" style="width: 15px; height: 15px;" />       
                </a> |
                <a asp-page="./Delete" asp-route-id="@item.Don_ID" class="btn btn-danger mx-2">
                    <img src="~/Images/Icons/trash-solid.svg" style="width: 15px; height: 15px;" />
                </a>
            </td>
        </tr>
}
        </tbody>
    </table>
</div>
