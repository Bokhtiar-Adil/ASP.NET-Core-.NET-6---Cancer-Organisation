@page
@model NonProfitSiteV3.Pages.Lists.EventsListAdmin.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div style="height: 90px;"></div>
<section class="short-intro" style="z-index: 10;">
    <h1>Details</h1>
</section>
<style>
    .short-intro {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    flex-direction: column;
    background: #36454F;
    height: fit-content;
    }
    .short-intro h1 {
    color: lawngreen;
    width: 100%;
    padding: 1rem;
    text-align: center;
    text-transform: uppercase;
    }
</style>

<div>
    <h4>Events</h4>
    <hr />
    <dl class="container-fluid">
        <dt class="col-sm-2" style="padding-left: 3rem;">
            @Html.DisplayNameFor(model => model.Events.Ev_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Events.Ev_name)
        </dd>
        <dt class="col-sm-2" style="padding-left: 3rem;">
            @Html.DisplayNameFor(model => model.Events.Ev_location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Events.Ev_location)
        </dd>
        <dt class="col-sm-2" style="padding-left: 3rem;">
            @Html.DisplayNameFor(model => model.Events.Ev_timedate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Events.Ev_timedate)
        </dd>
        <dt class="col-sm-2" style="padding-left: 3rem;">
            @Html.DisplayNameFor(model => model.Events.Ev_status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Events.Ev_status)
        </dd>
